<div class="container-fluid pt-4 px-4 card " >
    <div class="card mb-2" style="background-color: rgb(243, 244, 253);">
        <div class="card-header" style="background-color: rgb(232, 239, 248);">
          <i class="bi bi-funnel"></i>
          Filtrar Expedientes
        </div>
    
    <div class="card-body" >
        <div class="row">
            <div class="">
                <div class="card-body">
                    <div class="accordion bg-white" id="accordionPanelsStayOpenExample">
                        <div class="accordion-item">
                          <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree" aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                              <i class="bi bi-filter-square mx-2"></i>
                              Filtros
                            </button>
                          </h2>
                          <div id="panelsStayOpen-collapseThree" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <form class="row g-3 needs-validation" id="formFilters">
                                    <div class="col-md-3">
                                      <label for="validationCustom01" class="form-label">Orden</label>
                                      <input type="number" class="form-control" id="order" >
                                    </div>
                                    <div class="col-md-3">
                                        <label for="validationCustom02" class="form-label">Departamento</label>
                                        <select title="seleccione una opción"  class="form-select" id="selectDepar">
                                            <option selected value="" disabled>Seleccione una opción</option>
                                        </select>
                                      </div>
                                      <div class="col-md-3 position-relative">
                                        <label for="validationTooltip04" class="form-label">Localidad</label>
                                        <select class="form-select input" id="selecLocalidad"
                                          name="selecLocalidad">
                                          <option selected value="" disabled>Selecciona una opción</option>
                                        </select>
                                      </div>
                                    <div class="col-md-3">
                                        <label for="validationCustom04" class="form-label">Circunscripción</label>
                                        <select class="form-select" id="selectDistrict">
                                            <option selected value="" disabled>Seleccione una opción</option>
                                        </select>
                                      </div>
                                    <div class="col-md-3">
                                      <label for="validationCustom05" class="form-label">Juzgado</label>
                                      <select class="form-select" id="selectCourt">
                                        <option selected value="" disabled>Seleccione una opción</option>
                                      </select>
                                    </div>
                                    <div class="col-md-3">
                                      <label for="validationCustom06" class="form-label">Fecha Inicio</label>
                                      <input type="date" class="form-control" id="dateStart">
                                    </div>
                                    <div class="col-md-3">
                                        <label for="validationCustom07" class="form-label">Fecha Final</label>
                                        <input type="date" class="form-control" id="dateEnd">
                                      </div>
                                      <div class="col-md-3">
                                        <label for="validationCustom08" class="form-label">Estado</label>
                                        <select class="form-select" id="state">
                                            <option selected value="" disabled value="">seleccione una opción</option>
                                            <option value="3">En curso</option>
                                            <option value="2">Vencido</option>
                                            <option value="1">Elevado</option>
                                        </select>
                                      </div>
                                      <div class="col-md-3">
                                        <label for="validationCustom09" class="form-label">Iniciado por:</label>
                                        <select class="form-select" id="originRecord">
                                            <option selected value="" disabled value="">seleccione una opción</option>
                                            <option value="1">Denuncia</option>
                                            <option value="2">Oficio</option>
                                            <option value="3">Jefe SRH</option>
                                            <option value="4">Otros</option>
                                        </select>
                                      </div>
                                      <div class="col-md-3">
                                        <label for="validationCustom10" class="form-label">Palabras claves</label>
                                        <input type="text" class="form-control" id="keywords">
                                      </div>
                                    <div class="col-12">
                                      <button class="btn btn-show" type="submit"><i class="bi bi-search"></i> Filtrar</button>
                                      <button class="btn btn-secondary" type="reset"><i class="bi bi-trash"></i> Borrar campos</button>
                                    </div>
                                  </form>                            
                                </div>
                          </div>
                        </div>
                      </div>

                            <div class=" rounded mt-2 table-responsive container-filtersf" >
                                <table class="table table-striped small table-hover table-bordered">
                                    <thead class="table-light">
                                        <tr>
                                            <th scope="col">orden</th>
                                            <th scope="col">Departamento</th>
                                            <th scope="col">Localidad</th>
                                            <th scope="col">Tipo</th>
                                            <th scope="col">Circunscripcion</th>
                                            <th scope="col">Juzgado</th>
                                            <th scope="col">Inicio</th>
                                            <th scope="col">Origen</th>
                                            <th scope="col">Estado</th>
                                            <th scope="col">Secretario</th>
                                            <th scope="col">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody id="records" >
                                    </tbody>
                                </table>
                                <div class="text-center">
                                    <button class="btn btn-show btn-sm" id="btnPrevious"> < </button>
                                    <button class="btn btn-show btn-sm" id="btnNext"> > </button>
                                </div>
                            </div>
                      </div>
            </div>
        </div>
    </div>
</div>
</div>

